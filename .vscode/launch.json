    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/frontend/overview.py",
                "--server.port",
                "8080"
            ],
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "localhost",
                "--port",
                "8000",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend/",
            "jinja": true,
            "justMyCode": false,
            "python": "/home/zaubeerer/code/pdm/code_clinics/decisions/backend/.pixi/env/bin/python",
        },
    ],
    "compounds": [
        {
            "name": "Python: Fullstack",
            "configurations": [
                "Python: Streamlit",
                "Python: FastAPI"
            ],
            // "preLaunchTask": "${defaultBuildTask}",
            "stopAll": true
        }
    ]
}
